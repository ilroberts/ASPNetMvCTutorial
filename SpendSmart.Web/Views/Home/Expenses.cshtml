@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center py-6">
    <h1 class="text-4xl font-bold">Expenses</h1>
    <div class="divider"></div>
    <h3 class="text-2xl font-semibold">Total expenses: <span class="text-primary">£@((decimal)ViewBag.Expenses)</span></h3>
</div>

<div class="overflow-x-auto">
    <table class="table w-full">
        <thead class="bg-primary text-white">
        <tr class="hover">
            <th>Id</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center">No expenses found</td>
            </tr>
        }
        else
        {  
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>£@expense.Amount</td>
                    <td>@expense.Description</td>
                    <td>@expense.Category</td>
                    <td>
                        <a asp-controller="Home" asp-action="CreateEditExpense" asp-route-id="@expense.Id" class="btn btn-sm btn-outline btn-neutral mr-2">Edit</a>
                        <a asp-controller="Home" asp-action="DeleteExpenseItem" asp-route-id="@expense.Id" class="btn btn-sm btn-outline btn-error">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>